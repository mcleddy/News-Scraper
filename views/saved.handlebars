<div class="articleContainer">
    <div class="row">

        <div class="col-1">
        </div>

        <div class="col-10 articleColumn">
            
            {{#each articles}}

                <div class="card">
                    <div class="card-header">
                        <a class="headlineLink" href={{link}} target="_blank">{{title}}</a>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-5">
                                <img class="articleImage" src={{photo}}>
                            </div>

                            <div class="col-5">
                                <p>{{summary}}{{date}}</p>
                            </div>

                            <div class="col-2 buttonColumn">
                                <button type="button" class="btn btn-primary deleteArticleButton" data-id={{id}}>Delete Article</button>
                                <button type="button" class="btn btn-primary commentsButton" data-id={{id}}>comments</button>
                            </div>
                        </div>
                    </div>
                </div>

            {{/each}}
        </div>

        <div class="col-1">
        </div>

    </div>
</div>


<div class="modal fade" id="articleDeletedModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title articleDeletedTitle">Article Deleted</h5>
      </div>
      <div class="modal-body articleDeletedBody">
        <p>This article has been removed from your Saved Articles.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary closeModalButton" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="commentModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Article comments</h5>
      </div>
      <div class="modal-body commentModalTitle">
      </div>

      <div class="modal-body commentModalBody">
          {{!-- <ul id='commentList'></ul> --}}
      </div>

      <div class="modal-body commentModalForm">
          <form>
              <div class="form-group">
                  <label for="titleInput">comment Title</label>
                  <input id="titleInput" name="title">
              </div>
              <div class="form-group">
                  <label for="bodyInput">comment Text</label>
                  <textarea id="bodyInput" name="body"></textarea>
              </div>
          </form>
          <button class="btn-primary savecommentButton">Save comment</button>
          <div class="alertDiv"></div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary closeModalButton" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
